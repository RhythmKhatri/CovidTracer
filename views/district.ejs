                        <th scope="col">TOTAL DEATHS</th>
                      </tr>
                    </thead>
                    <tbody>
                    <tr>

                      <td class="x"><%= confirmed %></td>
                      <td class="x"> <%= recovered %> </td>
                      <td class="x"><%= deaths %></td>
                    </tr>

                  </tbody>

                </table>

          </div>


        </div>
      </div>

    </div>
